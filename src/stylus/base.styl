*
	font-family "Poppins", sans-serif

button
	border none
	color white
	padding 15px 30px
	background var(--brown)
	display flex
	align-items center
	line-height 24px
	cursor pointer
	font-size 14px

button svg
	height 24px
	width 24px

button.inverse
	border none
	background transparent
	color var(--brown)

.heading-container
	position relative
	padding 12px 22px 18px
	margin 10px
	text-align left

	.title
		font-family "Freight", serif;
		line-height 1.2
		margin-bottom 20px

	.description
		margin 0

.heading-container::after
	content ""
	position absolute
	z-index -1
	left 0
	top 0
	bottom 0
	width 50px
	border 2px solid var(--light-brown)
	border-right-color transparent

.page-nav
	display flex
	margin 20px auto
	justify-content space-around

.block-grid
	display grid
	grid-template-columns 1fr 1fr

	.item
		background #f5f5f5
		border 2px solid #f5f5f5
		position relative
		margin 20px
		padding 10px 20px
		text-align left

.box-list
	.item
		background #f5f5f5
		border 2px solid #f5f5f5
		position relative
		margin 20px auto
		padding 10px 20px
		text-align left

		input[type=checkbox],
		input[type=radio]
			display none

		label
			cursor pointer

		.icon-check
			display none

		.title
			margin 0
			font-size 18px

		.description
			margin 0

		label::after
			content ""
			position absolute
			right 20px
			top 50%
			transform translateY(-50%)
			border-radius 50%
			height 24px
			width 24px
			border 2px solid var(--light-brown)

	.item.selected
		border 2px solid var(--light-brown)
		background #f6f0e6

		label::after
			display none

		.icon-check
			display initial
			position absolute
			right 20px
			top 50%
			transform translateY(-50%)


.image-grid
	.item
		position relative
		cursor pointer

		label
			cursor pointer

		img
			border 2px solid transparent
			width 100%

		input[type=checkbox],
		input[type=radio]
			display none

		.title
			margin 0 0 20px 0
			font-weight bold
			text-align left
			font-size 18px

		.icon-check
			display none

	.item:hover
		img
			opacity 0.9
			filter brightness(1.1)

	.item.selected
		img
			border-color var(--light-brown)

		.icon-check
			display grid
			place-items center
			position absolute
			right 10px
			top 10px
			background white
			border-radius 50%

.form-group
	label
		text-align left
		display block

	input:not([type=checkbox])
		display block
		margin-bottom 10px;
		width 100%
		border 2px solid #efefef
		border-radius 0
		padding 10px

	textarea
		border 2px solid var(--light-brown)
		display block
		width 100%


@media $desktop
	.page-content
		display flex
		justify-content space-between
		// min-width 85vw

		.left
			flex 0 0 32%

		.right
			flex 0 0 58%

	.image-grid
		display grid
		gap 10px
		grid-template-columns repeat(2, 1fr)
